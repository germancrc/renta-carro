{{! Contenido de index.hbs }}

{{! Sección Hero con Formulario }}
<section class="hero-section py-5" style="background: linear-gradient(rgba(0,0,0,0.7), url('/images/hero-bg.jpg') center/cover;">
  <div class="container py-5">
    <div class="row align-items-center">
      <div class="col-lg-6">
<h1 class="display-4 fw-bold mb-3">Movilidad Elegante a Tu Alcance</h1>
<p class="lead mb-4">Viajes memorables empiezan con el auto perfecto.</p>
      </div>
      
      <div class="col-lg-6">
        <div class="search-card bg-white rounded-3 p-4 shadow">
          <div class="row g-3">
           
            <div class="col-md-6">
              <label class="form-label text-dark">Desde</label>
              <input type="date" class="form-control">
              <input type="time" class="form-control mt-2">
            </div>
            
            <div class="col-md-6">
              <label class="form-label text-dark">Hasta</label>
              <input type="date" class="form-control">
              <input type="time" class="form-control mt-2">
            </div>
            
            <div class="col-12">
              <button class="btn btn-primary w-100 py-3">
                <i class="bi bi-search me-2"></i>Ver disponibilidad
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{! Sección de Autos Populares }}
<section class="popular-cars py-5 bg-light">
  <div class="container">
    <h3 class="text-center mb-5 fw-bold">Los más populares</h3>
    
    <div class="row g-4">
      {{#each autos}}
      <div class="col-lg-4 col-md-6">
        <div class="card h-100 border-0 shadow-hover">
          <div class="card-img-top" style="height: 250px; overflow: hidden;">
            <img src="{{this.imagen}}" class="w-100 h-100 object-fit-cover" alt="{{this.nombre}}">
          </div>
          
          <div class="card-body">
            <h5 class="card-title fw-bold">{{this.nombre}}</h5>
            <div class="d-flex justify-content-between text-muted mb-3">
              <span><i class="bi bi-fuel-pump me-2"></i>Hybrid</span>
              <span><i class="bi bi-people me-2"></i>5 People</span>
              <span><i class="bi bi-speedometer2 me-2"></i>Automatic</span>
            </div>
            
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h4 class="text-primary mb-0">DOP ---<small>/dia</small></h4>
              </div>
              <a href="/autos/{{this.id}}" class="btn btn-primary mt-auto">Reservar ahora</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>