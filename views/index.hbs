{{! Contenido de index.hbs }}

{{! Sección Hero con Formulario }}
<section class="hero-section text-white position-relative">
  <!-- Div de fondo con cierre correcto -->
  <div class="hero-background position-absolute top-0 start-0 w-100 h-100"
    style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0)), url('/images/hero-bg.webp'); background-size: cover; background-position: center;">
  </div>

  <div class="container d-flex flex-column justify-content-center h-100 py-5 position-relative" style="z-index: 2;">
    <div class="row justify-content-center">
      <div class="col-12 text-center mb-4">
        <h1 class="fw-bold mb-3 text-shadow">Movilidad Elegante a Tu Alcance</h1>
        <p class="lead text-white-75 text-shadow">Viajes memorables empiezan con el auto perfecto.</p>
      </div>

      <div class="col-12 col-lg-8">
        <div class="search-card bg-white p-4 shadow">
          <form class="text-center">
            <div class="row g-3 align-items-end">
              <div class="col-md-4">
                <label class="fw-bold form-label text-dark">Desde</label>
                <input type="date" class="form-control mb-2">
                <input type="time" class="form-control">
              </div>

              <div class="col-md-4">
                <label class="fw-bold form-label text-dark">Hasta</label>
                <input type="date" class="form-control mb-2">
                <input type="time" class="form-control">
              </div>

              <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-primary py-3 mt-md-0 mt-3 shadow">
                  <i class="bi bi-search me-2"></i>Ver disponibilidad
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>



{{! Sección de Autos Populares }}
<section class="popular-cars py-5 mb-4">
  <div class="container position-relative">
    <h3 class="text-center mb-5 fw-bold">Los más populares</h3>

    <div class="carousel-container position-relative px-4">
      <!-- Contenedor del carrusel -->
      <div class="carousel-track">
        {{#each autos}}
        <div class="carousel-slide">
          <div class="card h-100 shadow hover-top transition mx-2">
            <a href="/autos/{{this.id}}" class="card-img-container position-relative p-3 d-block bg-light">
              <img src="{{this.imagen}}" class="img-fluid w-100" alt="{{this.nombre}}" style="height: 200px; object-fit: contain;">
            </a>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold">{{this.nombre}}</h5>
              <div class="d-flex flex-wrap gap-2 mb-3">
                {{#each caracteristicas}}
                <span class="badge rounded-pill bg-light text-dark border">{{this}}</span>
                {{/each}}
              </div>

              <div class="mt-auto">
                <div class="row align-items-center">
                  <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <h5 class="text-primary mb-0">
                      RD$ {{this.precio}} <small class="text-muted fs-6">/día</small>
                    </h5>
                  </div>
                  <div class="col-12 col-md-6 text-center text-md-start">
                    <a href="/autos/{{this.id}}" class="btn btn-primary w-100 w-md-auto px-4 py-2 shadow">
                      Reservar <i class="bi bi-arrow-right-short ms-1"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      
      <!-- Flechas de navegación -->
      <button class="carousel-arrow carousel-prev" aria-label="Anterior">
        <i class="bi bi-chevron-left"></i>
      </button>
      <button class="carousel-arrow carousel-next" aria-label="Siguiente">
        <i class="bi bi-chevron-right"></i>
      </button>
    </div>

    <!-- Botón "Ver todos" -->
    <div class="text-center mt-5">
      <a href="/autos" class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
        Ver todos los vehículos <i class="bi bi-car-front ms-2"></i>
      </a>
    </div>
  </div>
</section>

<div class="container">
  <hr class="my-4">
</div>

